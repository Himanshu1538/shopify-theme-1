<!-- Main banner section for homepage -->
<section class="relative min-h-screen bg-cover overflow-hidden">
  {% if section.settings.image %}
    <!-- Background image with responsive behavior -->
    <img
      src="{{ section.settings.image | img_url: 'large' }}"
      width="{{ section.settings.image.width }}"
      height="{{ section.settings.image.height }}"
      alt="{{ section.settings.image.alt }}"
      class="absolute top-0 left-0 w-full h-full object-cover">
  {% else %}
    {{ 'hero-apparel-1' | placeholder_svg_tag: 'absolute top-0 left-0 w-full h-full object-cover' }}
  {% endif %}

  <!-- Optional overlay for text readability -->
  <div class="absolute top-0 left-0 w-full h-full bg-black opacity-30"></div>

  <!-- Banner content box - centered content with responsive text and padding -->
  <div class="absolute inset-0 flex flex-col items-center justify-center mx-auto px-4 md:px-0 z-10 text-center text-white">
    <!-- Heading -->
    <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-2 md:mb-4">
      {{ section.settings.heading }}
    </h1>

    <!-- Text -->
    <p class="text-base sm:text-lg md:text-xl lg:text-2xl mb-4 md:mb-6">
      {{ section.settings.text }}
    </p>

    <!-- Button -->
    {% if section.settings.button_text %}
      {% comment %} <a href="{{ section.settings.button_link }}" class="inline-block px-6 py-3 text-sm sm:text-base md:text-lg font-semibold text-white bg-blue-600 rounded-md hover:bg-blue-700 transition">
        {{ section.settings.button_text }}
      </a> {% endcomment %}
      <a href="{{ routes.collections_url }}" class="inline-block px-6 py-4 text-sm sm:text-base md:text-lg font-semibold text-white bg-gray-900 hover:bg-gray-700 rounded-md my-2">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Simple Image Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading Text",
        "default": "Welcome to Our Store"
      },
      {
        "type": "text",
        "id": "text",
        "label": "Banner Text",
        "default": "Discover our collection today!"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text",
        "default": "Shop Now"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Simple Image Banner"
      }
    ]
  }
{% endschema %}